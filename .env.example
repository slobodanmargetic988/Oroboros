# Shared project defaults
PROJECT_NAME=Ouroboros
ENVIRONMENT=local

# Backend
API_HOST=127.0.0.1
API_PORT=8000
DATABASE_URL=postgresql+psycopg://postgres:postgres@localhost:5432/builder_control
# Comma-separated browser origins allowed to call API from frontend.
# Local dev example:
CORS_ALLOWED_ORIGINS_CSV=http://127.0.0.1:5173,http://localhost:5173,http://127.0.0.1:8088,http://localhost:8088
# Production example (replace with your real domains):
# CORS_ALLOWED_ORIGINS_CSV=https://app.example.com,https://staging.example.com

# Worker
WORKER_POLL_INTERVAL_SECONDS=5
REDIS_URL=redis://localhost:6379/0

# Frontend
VITE_API_BASE_URL=http://127.0.0.1:8000
