[Unit]
Description=Ouroboros web surface (%i)
After=network.target

[Service]
Type=simple
User=oroboros
Group=oroboros
WorkingDirectory=/srv/oroboros/current
EnvironmentFile=/etc/oroboros/web-%i.env
ExecStart=/usr/bin/python3 /srv/oroboros/current/scripts/run-web-surface.py --root ${WEB_ROOT} --port ${WEB_PORT}
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
